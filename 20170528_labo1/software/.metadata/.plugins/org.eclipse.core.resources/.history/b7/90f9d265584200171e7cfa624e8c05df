#include "io.h"
#include "alt_types.h"
#include "system.h"

//Custom .h files
#include "sseg_driver.h"
#include "led_driver.h"
#include "button_reader.h"


//exemple pour afficher sur les 7 segments.
int main(void)
{


	//display pause
	display_pause();

	//led flashing
	int period = 500;

	while(1){

		//Nouvelle position
		if(buttons_register==key1)//key1 pressed becomes LOW.
		{
		get_switches(SWITCHES_BASE, &period);
		}

		//PAUSE
		if(buttons_register==key0)//key0 pressed becomes LOW.
		{
			display_pause();
			int toggled = 1;
			while(toggled)
			{
				if(buttons_register==key0)
				{
					toggled = 0;
				}
			}
		}

		//RUN
		led_flash(LEDS_BASE, period);
		display_int_to_sseg(period);
	}
	return 0;
}

