#include "io.h"
#include "alt_types.h"
#include "system.h"

//Custom .h files
#include "sseg_driver.h"
#include "led_driver.h"
#include "button_reader.h"


int main(void)
{


	//display pause
	display_pause();

	//led flashing, default 500ms.
	int period = 500;

	int key0_toggled = 0;

	while(1)
	{

		if(key0_pressed == (buttons_edge_capture & key0_pressed)){
			key0_toggled = 1;
		}

		while(key0_toggled)
		{
		led_flash(LEDS_BASE, period);
		display_int_to_sseg(period);
		}


	}
	return 0;
}

